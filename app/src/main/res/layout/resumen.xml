<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/imagenfondo">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Resumen del pedido"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/lblNombre"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/lblDireccion"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/lblTelefono"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblPizzas"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblBebidas"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblTotalPrecio"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblPeluche"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:background="#000000" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:id="@+id/imgPeluche"
                android:src="@mipmap/pelucheandroid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblVale"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:background="#000000" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Aceptar"
                android:id="@+id/btnAceptar"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:layout_marginTop="20dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:id="@+id/btnCancelar"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Mostrar pedidos"
                android:id="@+id/btnMostrar"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>